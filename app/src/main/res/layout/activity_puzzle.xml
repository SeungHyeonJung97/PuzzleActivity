<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PuzzleActivity">

    <ImageView
        android:id="@+id/iv_karina001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/karina_001" />

    <ImageView
        android:id="@+id/iv_karina002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@+id/iv_karina001"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/karina_002" />

    <ImageView
        android:id="@+id/iv_karina003"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@+id/iv_karina002"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/karina_003" />

    <ImageView
        android:id="@+id/iv_karina004"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/iv_karina001"
        app:layout_constraintTop_toBottomOf="@+id/iv_karina001"
        tools:src="@drawable/karina_004" />

    <ImageView
        android:id="@+id/iv_karina005"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@+id/iv_karina004"
        app:layout_constraintTop_toBottomOf="@+id/iv_karina002"
        tools:src="@drawable/karina_005" />

    <ImageView
        android:id="@+id/iv_karina006"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@+id/iv_karina005"
        app:layout_constraintTop_toBottomOf="@+id/iv_karina003"
        tools:src="@drawable/karina_006" />

    <ImageView
        android:id="@+id/iv_karina007"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/iv_karina004"
        app:layout_constraintTop_toBottomOf="@+id/iv_karina004"
        tools:src="@drawable/karina_007" />

    <ImageView
        android:id="@+id/iv_karina008"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@+id/iv_karina007"
        app:layout_constraintTop_toBottomOf="@+id/iv_karina005"
        tools:src="@drawable/karina_008" />

    <ImageView
        android:id="@+id/iv_blank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@+id/iv_karina008"
        app:layout_constraintTop_toBottomOf="@+id/iv_karina006"
        tools:src="@drawable/ic_launcher_background" />

    <ProgressBar
        android:id="@+id/pb_timer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/before_start"
        app:layout_constraintBottom_toTopOf="@+id/pb_timer"
        app:layout_constraintEnd_toEndOf="@+id/pb_timer"
        app:layout_constraintStart_toStartOf="@+id/pb_timer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        tools:text="남은 시간"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/btn_move_to_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/btn_move_to_record"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/btn_check"
        app:layout_constraintStart_toStartOf="@+id/btn_check"
        app:layout_constraintTop_toBottomOf="@+id/btn_check" />

</androidx.constraintlayout.widget.ConstraintLayout>